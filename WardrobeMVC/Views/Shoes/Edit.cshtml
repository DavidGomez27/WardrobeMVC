        @Html.HiddenFor(model => model.OccasionID)

        @Html.HiddenFor(model => model.SeasonID)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
